%header.header
  .headerInner
    .mainHeader
      %h1.icon
        = link_to image_tag('logo.png', class: 'logo'), '#'
      .searchBox
        %form.search{"accept-charset" => "UTF-8", :action => "#", :method => "GET"}
          %input#searchInput.search__input{:name => "key", :placeholder => "キーワードから探す"}/
          %button.btn{:type => "submit"}
            .btn__icon
              = image_tag "icon-search 1.png", class: "btn__icon--img"
    .nav
      %ul.listLeft
        %li
          = link_to 'カテゴリー', '#', class: "listLeft--first"
        %li
          = link_to 'ブランド', '#', class: "listLeft--second"
      %ul.listRight
        %li
          = link_to 'ログイン', '#', class: "listRight__item"
        %li
          = link_to '新規会員登録', '#', class: "listRight__item"